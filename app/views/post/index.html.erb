<% if user_signed_in? && @post.user.email == current_user.email %>
	<div class='pull-right' style=" position: relative; top: 15px; right: 10px">
	<a href="<%= @post.id %>/edit"><button type="button" class="btn btn-primary">Edit</button></a>
	</div>
<% end %>
<div style="margin-bottom: 10px;" class="jumbotron color">
  <h1><%= @post.name %><small><div style="font-size: 30px;" class="pull-right"><%= @post.category.name %></div></small></h1>
  <hr>
  <h4><%= @post.contents.html_safe %></h4>
</div>
